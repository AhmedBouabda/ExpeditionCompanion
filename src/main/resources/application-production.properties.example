# Example application-production.properties
# Copy this file to application-production.properties and update with your values

# Database Configuration for Production
spring.datasource.url=jdbc:mysql://your-production-host:3306/expedition_companion?useSSL=true&serverTimezone=UTC
spring.datasource.username=${DB_USERNAME}
spring.datasource.password=${DB_PASSWORD}

# Production settings
spring.jpa.hibernate.ddl-auto=validate
spring.jpa.show-sql=false
logging.level.root=WARN
logging.level.spring.esprit.expedetion_companion=INFO

# Production server settings
server.port=${PORT:8080}

# Security settings for production
server.ssl.enabled=true
server.ssl.key-store=classpath:keystore.p12
server.ssl.key-store-password=${SSL_KEYSTORE_PASSWORD}
server.ssl.key-store-type=PKCS12